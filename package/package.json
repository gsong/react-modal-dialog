{
  "name": "@gsong/react-modal-dialog",
  "version": "2.0.1",
  "description": "No-frills modal <dialog> for React",
  "license": "MIT",
  "repository": "github:gsong/react-modal-dialog",
  "author": {
    "name": "George Song",
    "email": "george@gsong.dev",
    "url": "https://gsong.dev"
  },
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "duel --dirs",
    "prebuild": "run-s clean:build",
    "clean": "run-p clean:**",
    "clean:build": "rimraf dist .turbo",
    "clean:node_modules": "rimraf node_modules",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:exports": "attw --pack .",
    "release": "pnpm publish --access public",
    "prerelease": "run-s lint typecheck build",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "modal",
    "dialog"
  ],
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@knighted/duel": "^1.0.8"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
